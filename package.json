{
  "name": "@keyv/mono",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "tsc --build",
    "lint": "eslint --ignore-path .gitignore --ext .js,.ts --format pretty ./",
    "format": "yarn lint --fix",
    "test": "nyc ava --serial",
    "test:docker": "docker-compose up --build --abort-on-container-exit --exit-code-from test",
    "posttest:docker": "docker-compose down --rmi local",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "release": "lerna publish"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "all": true
  },
  "eslintConfig": {
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking",
      "xo",
      "xo-typescript",
      "xo-lukechilds"
    ],
    "parserOptions": {
      "project": "tsconfig.base.json"
    },
    "rules": {
      "@typescript-eslint/no-unnecessary-condition": [
        "warn",
        {
          "ignoreRhs": true
        }
      ],
      "@typescript-eslint/promise-function-async": "off",
      "@typescript-eslint/strict-boolean-expressions": "off",
      "no-dupe-class-members": 0
    },
    "overrides": [
      {
        "files": [
          "**/*.js"
        ],
        "rules": {
          "@typescript-eslint/unbound-method": "off",
          "@typescript-eslint/explicit-function-return-type": "off"
        }
      }
    ]
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^0.1.3",
    "@typescript-eslint/eslint-plugin": "^2.3.3",
    "@typescript-eslint/parser": "^2.3.3",
    "ava": "^2.2.0",
    "coveralls": "^3.0.0",
    "eslint": "^6.5.1",
    "eslint-config-xo": "^0.27.1",
    "eslint-config-xo-lukechilds": "^1.0.0",
    "eslint-config-xo-typescript": "^0.19.0",
    "eslint-formatter-pretty": "^2.1.1",
    "lerna": "^3.16.5",
    "nyc": "^14.1.1",
    "source-map-support": "^0.5.13",
    "ts-node": "^8.4.1",
    "typescript": "^3.6.3"
  }
}
